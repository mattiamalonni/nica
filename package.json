{
  "name": "nica",
  "version": "0.2.1",
  "type": "module",
  "description": "A minimal, unopinionated OAuth2 authentication library for Next.js",
  "repository": "https://github.com/mattiamalonni/nica",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "default": "./dist/next/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "next": "^16",
    "react": "^19"
  },
  "devDependencies": {
    "next": "^16",
    "typescript": "^5",
    "@types/react": "^19"
  }
}
